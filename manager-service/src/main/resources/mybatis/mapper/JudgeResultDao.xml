<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.cloudli.managerservice.dao.JudgeResultDao">
    <resultMap id="JudgeResult" type="top.cloudli.managerservice.model.JudgeResult">
        <result column="language" property="language"
                typeHandler="top.cloudli.managerservice.converter.ResultConverter"/>
        <result column="result" property="result" typeHandler="top.cloudli.managerservice.converter.ResultConverter"/>
    </resultMap>

    <select id="getCount" resultType="java.lang.Long">
        select count(*)
        from judge_result where user_id = #{userId}
    </select>

    <select id="getByUserId" resultMap="JudgeResult">
        select *
        from judge_result
        where user_id = #{userId}
        limit #{start}, #{limit}
    </select>

</mapper>