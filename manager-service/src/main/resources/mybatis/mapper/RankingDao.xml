<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.cloudli.managerservice.dao.RankingDao">

    <select id="getCount" resultType="java.lang.Long">
        select count(user_id)
        from ranking_list
    </select>

    <select id="getRanking" resultType="top.cloudli.managerservice.model.Ranking">
        select *
        from ranking_list
        limit #{start}, #{limit}
    </select>

    <select id="getContestRankingCount" resultType="java.lang.Long">
        select count(*)
        from contest_ranking_list
        where contest_id = #{contestId}
    </select>

    <select id="getContestRanking" resultType="top.cloudli.managerservice.model.Ranking">
        select *
        from contest_ranking_list
        where contest_id = #{contestId}
        limit #{start}, #{limit}
    </select>

</mapper>