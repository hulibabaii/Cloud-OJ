<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.cloudli.managerservice.dao.ProblemDao">

    <select id="getAll" resultType="top.cloudli.managerservice.model.User">
        select * from user;
    </select>

    <insert id="add" parameterType="top.cloudli.managerservice.model.User">
        insert into `user`(user_id, name, password, email, section, role_id)
        value(#{userId}, #{name}, #{password}, #{email}, #{section}, #{role_id})
    </insert>

    <delete id="delete">
        delete from user where user_id = #{userId}
    </delete>
</mapper>